<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="188dp"
    android:layout_marginBottom="@dimen/standard_view_padding"
    android:layout_marginLeft="@dimen/standard_view_padding"
    android:background="@color/backgroundLight"
    android:elevation="@dimen/app_bar_elevation"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/productlist_photo"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/productlist_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:fadingEdgeLength="@dimen/standard_view_padding"
        android:text="TEST NAME" />

    <TextView
        android:id="@+id/productlist_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="11111$"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

</LinearLayout>