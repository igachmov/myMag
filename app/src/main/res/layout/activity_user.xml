<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/userbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mymag.mymag.model.activities.UserActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#318bbf"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_margin="15dp"
                android:background="@null"
                android:id="@+id/image_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/image_email"
                android:layout_margin="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/image_address"
                android:layout_margin="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TextView
                android:id="@+id/text_phone"
                android:textSize="20sp"
                android:gravity="center"
                android:text="test"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_email"
                android:textSize="20sp"
                android:gravity="center"
                android:text="test"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_address"
                android:textSize="20sp"
                android:gravity="center"
                android:text="test"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/user_button_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:text="edit"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:background="@drawable/mybutton"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/user_button_delete"
            android:text="delete"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:alpha="0.7"
            android:background="@drawable/mybutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
